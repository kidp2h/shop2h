<!-- Start Cart Panel -->
<div class="shopping__cart">
    <div class="shopping__cart__inner">
        <div class="offsetmenu__close__btn">
            <a href="javascript:void(0)"><i class="zmdi zmdi-close"></i></a>
        </div>
        <div class="shp__cart__wrap cart__product">
            <% if (cart) { %>
                <% cart.items.forEach(item => { %>
                    <div class="shp__single__product" data-id-product="<%= item.product._id %>">
                        <div class="shp__pro__thumb">
                            <a href="javascript:void(0)">
                                <img src="<%= item.product.image %> " alt="product images">
                            </a>
                        </div>
                        <div class="shp__pro__details">
                            <h2><a href="/product/detail"><%=item.product.name%> </a></h2>
                            <span class="quantity">QTY: <%= item.quantity %> </span>
                            <span class="shp__price">$<%=item.product.sale.toLocaleString("en") %> </span>
                        </div>
                        <div class="remove__btn">
                            <a href="javascript:void(0)" class="btn__remove" title="Remove this item"><i class="zmdi zmdi-close"></i></a>
                        </div>
                    </div>
                <% }) %>
            <% } %>
            
        </div>
        <ul class="shoping__total">
            <li class="subtotal">Subtotal:</li>
            <% if (cart) { %>
                <li class="total__price">$<%= cart.summary.toLocaleString("en") %> </li>
            <% } else { %>
                <li class="total__price">$0</li>
            <% } %> 
            
        </ul>
        <ul class="shopping__btn">
            <li><a href="/shop/cart">View Cart</a></li>
            <li class="shp__checkout"><a href="/shop/checkout">Checkout</a></li>
        </ul>
    </div>
</div>
<script src="/js/shop.js"></script>
<!-- End Cart Panel -->
